<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/text_size</item>
        <item name="android:layout_marginStart">@dimen/twenty_five</item>
        <item name="android:layout_marginEnd">@dimen/twenty_five</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MainSubHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">@dimen/five</item>
        <item name="android:layout_marginBottom">@dimen/five</item>
        <item name="android:layout_marginStart">@dimen/twenty_five</item>
        <item name="android:layout_marginEnd">@dimen/twenty_five</item>
        <item name="android:textColor">@color/sub_text</item>
    </style>

    <style name="AlertSubHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">@dimen/five</item>
        <item name="android:layout_marginBottom">@dimen/five</item>
        <item name="android:layout_marginStart">@dimen/twenty_five</item>
        <item name="android:layout_marginEnd">@dimen/twenty_five</item>
        <item name="android:textColor">@color/sub_text</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/curve_input</item>
        <item name="android:layout_marginTop">@dimen/twenty_five</item>
        <item name="android:layout_marginRight">@dimen/twenty_five</item>
        <item name="android:layout_marginLeft">@dimen/twenty_five</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/curve_button</item>
        <item name="android:layout_margin">@dimen/twenty_five</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconImage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginStart">@dimen/text_size</item>
        <item name="android:layout_marginEnd">@dimen/text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>