<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten"
    android:background="@drawable/choose_content1"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:background="@drawable/top_corner_dark_blue"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:text="1) கடவுள் எத்தனை ஆட்களாக இருக்கின்றார்?" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/option1"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:onClick="answerOne"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginStart="@dimen/ten"
            android:contentDescription="@string/choose_circle_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:textColor="#4491C6"
            android:id="@+id/option1_tv"
            android:layout_marginLeft="@dimen/text_size"
            android:layout_marginRight="@dimen/text_size"
            android:text="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/option2"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:onClick="answerTwo"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginStart="@dimen/ten"
            android:contentDescription="@string/choose_circle_image" />

        <TextView
            android:id="@+id/option2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:textColor="#4491C6"
            android:layout_marginLeft="@dimen/text_size"
            android:layout_marginRight="@dimen/text_size"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/option3"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:onClick="answerThree"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginStart="@dimen/ten"
            android:contentDescription="@string/choose_circle_image" />

        <TextView
            android:id="@+id/option3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:textColor="#4491C6"
            android:layout_marginLeft="@dimen/text_size"
            android:layout_marginRight="@dimen/text_size"
            android:text="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/option4"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/circle"
            android:layout_gravity="center"
            android:onClick="answerFour"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginStart="@dimen/ten"
            android:contentDescription="@string/choose_circle_image" />

        <TextView
            android:id="@+id/option4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:textColor="#4491C6"
            android:layout_marginLeft="@dimen/text_size"
            android:layout_marginRight="@dimen/text_size"
            android:text="20" />

    </LinearLayout>

</LinearLayout>
