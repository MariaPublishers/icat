<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/major_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/title_size"
            android:layout_marginTop="@dimen/title_size"
            android:layout_marginRight="@dimen/title_size"
            android:layout_marginBottom="@dimen/title_size"
            app:cardBackgroundColor="@color/empty_text_blue"
            app:cardCornerRadius="@dimen/text_size">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="உயிரெழுத்து மறைக்கல்வி"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/title_size"
            android:layout_marginTop="@dimen/title_size"
            android:layout_marginRight="@dimen/title_size"
            app:cardBackgroundColor="@color/empty_text_blue"
            app:cardCornerRadius="@dimen/text_size">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="எண்கள் மறைக்கல்வி"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>